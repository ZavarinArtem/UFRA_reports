<odoo>

    <record id="pos_print_options_wizard_form" model="ir.ui.view">
        <field name="name">pos.print.options.wizard.form</field>
        <field name="model">pos.print.options.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Options">
                <h2>
                    Please, select following options:
                </h2>
                <span/>
                <field name="session_id"/>
<!--                <field name="codes_len" invisible="1"/>-->
<!--                <field name="partners_len" invisible="1"/>-->
<!--                <group name="codes" attrs="{'invisible': [('codes_len', '&lt;=', 1)]}">-->
                <group name="codes">
                    <field name="selected_code" widget="radio"/>
                </group>
<!--                <group name="partners" attrs="{'invisible': [('partners_len', '&lt;=', 1)]}">-->
                <group name="partners">
                    <field name="partners" invisible="1"/>
                    <field name="selected_partner" domain="[('id', 'in', partners)]"/>
                </group>
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="confirm" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>